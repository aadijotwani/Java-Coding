package questions;
import java.util.Scanner;
public class ArrayTraversal 
{	
	
	void Traverse_StoE(int[] arr)
	{
		for(int i=0; i<arr.length; i++)
		{
			System.out.println(arr[i]+" ");
		}
	}
	
	void Traverse_EtoS(int[] arr)
	{
		for(int i=arr.length-1; i>=0; i--)
		{
			System.out.println(arr[i]+" ");
		}
	}
	
	void Traverse_StoHalf(int[] arr)
	{
		for(int i=0; i<arr.length/2; i++)
		{
			System.out.println(arr[i]+" ");
		}
	}
	
	void Traverse_HalftoE(int[] arr)
	{
		for(int i=(arr.length-1)/2; i<arr.length; i++)
		{
			System.out.println(arr[i]+" ");
		}

	}
	
	void Traverse_EtoHalf(int[] arr)
	{
		for(int i=arr.length-1; i>=arr.length/2; i--)
		{
			System.out.println(arr[i]+" ");
		}
	}
	
	void Traverse_HalftoS(int[] arr)
	{
		for(int i=(arr.length-1)/2; i>=0; i--)
		{
			System.out.println(arr[i]+" ");
		}
	}

	
	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Please enter the size of the array");
		int n = sc.nextInt();
		
		int[] arr = new int[n];		
		
		System.out.println("Please enter the elements of the array: ");
		for(int i=0; i<arr.length; i++)
		{
			arr[i] = sc.nextInt();
		}
		
		
		
		
	}
}
